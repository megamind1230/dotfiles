# RUN MY CUSTOME SCRIPTS .. triggered with ctrl b
scriptsRun() {
  local script

  script=$((ls ~/scripts/) | fzf | awk '{print $9}')

  [[ -z "$script" ]] && return 0

  # read -p "Run $script? (y/N) " ans
  # [[ $ans == y ]] && "$script"
  "$script"
}
bind '"\C-b":"scriptsRun\n"'

